<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <div class="profile-img"><!-- Profile Image -->
      <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
      <div class="health-bar" style="border-bottom:0px;"><!-- The character health bar -->
        <div style="width:{{system.hp.percentage}}%" class="health-fill"></div>
          <div class="health-text">
              <span
                class='short-field align-right current-value'
                style='text-align:right;'>
                {{system.hp.value}}
              </span> 
            <p style="margin:0px">/</p>
              <span class=' short-field'>
                {{system.hp.max}}
              </span> 
          </div>
      </div> <!-- End Health Bar -->
    </div><!-- End Profile Image -->

    <div class="header-block">
      <div class="character-header-block flexrow">
        <div class="character-header-block flexcol">
          <h1 class="charname">
            <input name="name" type="text" value="{{actor.name}}" placeholder="Name"/>
          </h1>
          <div class="flexrow flex-group-center">
            <label for="system.details.class" class="header-label align-left">{{localize "HYP3E.details.class"}}</label>
            <select name="system.details.class">
              <option value=""></option>
              {{selectOptions characterClasses selected=system.details.class localize=false}}
            </select>
            <span></span>
          </div>
          <div class="flexrow flex-group-center">
            <label for="system.details.alignment" class="header-label align-left">{{localize "HYP3E.details.alignment"}}</label>
            <input type="text" name="system.details.alignment" value="{{system.details.alignment}}" data-dtype="String" />
            <span></span>
          </div>
          <div class="flexrow flex-group-center">
            <label for="system.details.race" class="header-label align-left">{{localize 'HYP3E.details.race'}}</label>
            <select name="system.details.race">
              <option value=""></option>
              {{selectOptions races selected=system.details.race localize=false}}
            </select>
            <span></span>
          </div>
        </div>
        <div class="character-header-block flexcol">
          <div class="flexrow flex-group-center">
            <label class="header-label align-left">{{localize "HYP3E.details.level"}}</label>
            <input type="text" name="system.details.level.value" value="{{system.details.level.value}}" data-dtype="Number" />
            <span></span>
            <span></span>
            <span></span>
          </div>
          <div class="flexrow flex-group-center">
            <label for="system.details.xp.value" class="header-label align-left">{{localize "HYP3E.details.xp"}}</label>
            <input type="text" name="system.details.xp.value" value="{{system.details.xp.value}}" />
            <span></span>
            <label for="system.details.xp.toNextLvl" class="header-label flexlarge align-left">{{localize "HYP3E.details.toNextLvl"}}</label>
            <input type="text" name="system.details.xp.toNextLvl" value="{{system.details.xp.toNextLvl}}" />
          </div>
          <div class="flexrow flex-group-center">
            <label for="system.details.xp.bonus" class="header-label align-left">{{localize "HYP3E.bonus"}}</label>
            <input type="text" name="system.details.xp.bonus" value="{{system.details.xp.bonus}}" /> %
            <span></span>
            <label for="system.details.xp.primeAttr" class="header-label flexlarge align-left">{{localize "HYP3E.details.primeAttr"}}</label>
            <input type="text" name="system.details.xp.primeAttr" value="{{system.details.xp.primeAttr}}" />
          </div>
          <div class="flexrow flex-group-center">
            <label for="system.knownLanguages" class="header-label align-left">{{localize 'HYP3E.details.languages'}}</label>
            <input class="flex-xlarge" type="text" name="system.knownLanguages" value="{{system.knownLanguages}}"/>
          </div>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="abilities">{{localize "HYP3E.tabs.abilities"}}</a>
    <a class="item" data-tab="combat">{{localize "HYP3E.tabs.combat"}}</a>
    <a class="item" data-tab="spells">{{localize "HYP3E.tabs.spells"}}</a>
    <a class="item" data-tab="items">{{localize "HYP3E.tabs.items"}}</a>
    <a class="item" data-tab="description">{{localize "HYP3E.tabs.description"}}</a>
    <a class="item" data-tab="effects">{{localize "HYP3E.tabs.effects"}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Owned Abilities Tab --}}
    <div class="tab abilities" data-group="primary" data-tab="abilities">
      {{!-- This is a Handlebars partial. They're stored in the `/parts` folder next to this sheet, and defined in module/helpers/templates.mjs --}}
      {{> "systems/hyp3e/templates/actor/parts/actor-abilities.hbs"}}
    </div>

    {{!-- Combat Tab --}}
    <div class="tab combat" data-group="primary" data-tab="combat">
       {{> "systems/hyp3e/templates/actor/parts/actor-combat.hbs"}}
    </div>

    {{!-- Owned Spells Tab --}}
    <div class="tab spells" data-group="primary" data-tab="spells">
      <div class="description-block">
        {{> "systems/hyp3e/templates/actor/parts/actor-spells.hbs"}}
      </div>
    </div>

    {{!-- Owned Items Tab --}}
    <div class="tab items" data-group="primary" data-tab="items">
      <div class="description-block">
        {{> "systems/hyp3e/templates/actor/parts/actor-items.hbs"}}
      </div>
    </div>

    {{!-- Biography Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">
      {{> "systems/hyp3e/templates/actor/parts/actor-description.hbs"}}
    </div>

    {{!-- Active Effects Tab --}}
    <div class="tab effects flexcol" data-group="primary" data-tab="effects">
      <div class="description-block">
        {{> "systems/hyp3e/templates/actor/parts/actor-effects.hbs"}}
      </div>
    </div>

  </section>
</form>
