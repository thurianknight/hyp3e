<ol class="items-list effects-list">
  {{#each effects as |section sid|}}
    <li class="items-header flexrow" data-effect-type="{{section.type}}">
      <h3 class="item-name effect-name flexrow">{{localize section.label}}</h3>
      <div class="effect-source">{{localize "HYP3E.effect.source"}}</div>
      <div class="effect-source">{{localize "HYP3E.spell.duration"}}</div>
      <div class="item-controls effect-controls flexrow">
        <a class="effect-control" data-action="create" title="{{localize 'HYP3E.effect.create'}}">
          <i class="fas fa-plus"></i> {{localize "HYP3E.effect.add"}}
        </a>
      </div>
    </li>

    <ol class="item-list">
    {{#each section.effects as |effect|}}
      <li class="item-entry item" data-effect-id="{{effect.id}}">
        <div class="item-header flexrow">
          <div class="item-name effect-name">
            <img class="item-image" src="{{effect.icon}}"/>
            <h4>{{effect.name}}</h4>
          </div>
          <div class="effect-source">{{effect.sourceName}}</div>
          <div class="effect-duration">{{effect.duration.label}}</div>
          <div class="item-controls effect-controls flexrow">
            <a class="effect-control" data-action="toggle" title="{{localize 'HYP3E.effect.toggle'}}">
              <i class="fas {{#if effect.disabled}}fa-check{{else}}fa-times{{/if}}"></i>
            </a>
            <a class="effect-control" data-action="edit" title="{{localize 'HYP3E.item.edit'}}">
              <i class="fas fa-edit"></i>
            </a>
            <a class="effect-control" data-action="delete" title="{{localize 'HYP3E.item.delete'}}">
              <i class="fas fa-trash"></i>
            </a>
          </div>
        </div>
      </li>
    {{/each}}
    </ol>
  {{/each}}
</ol>
